@set('anchors', data.getUrlsForRange(data.firstPage, data.lastPage))
@set('isFirstPage', data.currentPage === data.firstPage)
@set('isLastPage', data.currentPage === data.lastPage)
@set('pageStartCount', isFirstPage ? 1 : data.currentPage * data.perPage - data.perPage)
@set('pageEndCount', isLastPage ? data.total : data.currentPage * data.perPage)
@set('disabledClass', 'text-slate-400 cursor-not-allowed')

<div class="bg-slate-100 p-3 flex items-center justify-between rounded-xl {{ className }}">
  <div class="flex-1 flex justify-between sm:hidden">
    <a {{{ !isFirstPage && `href="${data.getPreviousPageUrl()}"` }}} up-follow class="relative inline-flex items-center px-4 py-2 border border-slate-200 text-sm font-medium rounded-md bg-white {{ isFirstPage ? disabledClass : 'text-slate-900 hover:bg-slate-100' }}">
      Previous
    </a>
    <a {{{ !isLastPage && `href="${data.getNextPageUrl()}"` }}} up-follow class="ml-3 relative inline-flex items-center px-4 py-2 border border-slate-200 text-sm font-medium rounded-md bg-white {{ isLastPage ? disabledClass : 'text-slate-900 hover:bg-slate-100' }}">
