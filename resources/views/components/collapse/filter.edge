@let(classes = ['collapse', $props.class ?? 'hover:collapse-arrow border-base-100 border-[3px] mb-3'])

<details {{ $props.merge({ class: classes }).toAttrs() }}>
  <summary class="collapse-title px-0 text-sm font-semibold">
    @if (title)
      {{ title }}
    @elseif ($slots.title)
      {{{ await $slots.title() }}}
    @endif
  </summary>
  <div class="collapse-content px-0 flex flex-col gap-1 text-sm">
    {{{ await $slots.main() }}}
  </div>
</details>
