@let(showDescription = typeof description !== 'boolean' || description)

@if (size == 'lg')

  @card({ class: `md:card-side ${$props.class || ''}`, border: 'flex md:card-side items-center' })
    <div class="md:w-1/2 lg:w-2/5 pb-0 md:pb-[var(--card-p,1.5rem)] p-[var(--card-p,1.5rem)] md:pr-0">
      <figure class="relative overflow-visible group-hover:scale-[102.5%] duration-200">
        <img src="/imgs/thumbnail_01.jpg" alt="Shoes" class="rounded-md relative z-10">
        <img src="/imgs/thumbnail_01.jpg" alt="Shoes" class="rounded-md absolute top-0 left-0 w-full h-full blur-lg opacity-0 group-hover:opacity-75 duraton-200">
      </figure>
    </div>

    <div class="md:w-1/2 lg:w-3/5 card-body">
      <div class="flex items-center gap-3 lg:mb-1.5">
        @each (topic in post.topics)
          <div class="badge badge-soft badge-sm badge-primary">
            {{ topic.name }}
          </div>
        @endeach

        <div class="badge badge-xs lg:badge-sm badge-accent">NEW</div>
      </div>

      <h2 class="card-title text-xl md:text-2xl lg:text-3xl max-w-[32ch] font-semibold text-base-title lg:mb-3">
        <a href="#" class="link-grow">
          {{ post.title }}
        </a>
      </h2>

      @if (showDescription)
        <p class="line-clamp-5 md:line-clamp-3 lg:line-clamp-5 lg:text-lg opacity-60 mb-3">
          {{ post.description }}
        </p>
      @endif
    </div>
  @end

@elseif (size == 'wide')

  @card({ class: `@md:card-side ${$props.class || ''}` })
    <div class="@sm:w-2/5 pb-0 @sm:pb-[var(--card-p,1.5rem)] p-[var(--card-p,1.5rem)] md:pr-0">
      <figure class="relative overflow-visible group-hover:scale-[102.5%] duration-200">
        <img src="/imgs/thumbnail_01.jpg" alt="Shoes" class="rounded-md relative z-10">
        <img src="/imgs/thumbnail_01.jpg" alt="Shoes" class="rounded-md absolute top-0 left-0 w-full h-full blur-lg opacity-0 group-hover:opacity-75 duraton-200">
      </figure>
    </div>

    <div class="flex-1 card-body">
      @if ($slots.badge)
        {{{ await $slots.badge() }}}
      @else
        <div class="flex items-center gap-3 @xl:mb-1.5">
          @each (topic in post.topics)
            <div class="badge badge-soft badge-xs badge-primary">
              {{ topic.name }}
            </div>
          @endeach

          <div class="badge badge-xs @xl:badge-sm badge-accent">NEW</div>
        </div>
      @endif

      <h2 class="card-title font-semibold text-base-title text-base @lg:text-lg">
        <a href="#" class="link-grow">
          {{ post.title }}
        </a>
      </h2>

      @if (showDescription)
        <p class="line-clamp-2 opacity-60 text-sm">
          {{ post.description }}
        </p>
      @endif
    </div>
  @end

@else

  @card({ class: 'w-68 md:w-76 lg:w-96' })
    <div class="card-body">
      <div class="flex items-center justify-between gap-3">
        @each (topic in post.topics)
          <div class="badge badge-soft badge-xs badge-primary">
            {{ topic.name }}
          </div>
        @endeach

        <div class="badge badge-xs badge-accent">NEW</div>
      </div>

      <h2 class="card-title font-semibold text-base-title text-base md:text-lg">
        <a href="#" class="link-grow">
          {{ post.title }}
        </a>
      </h2>

      @if (showDescription)
        <p class="line-clamp-3 opacity-60 text-sm">
          {{ post.description }}
        </p>
      @endif
    </div>
  @end

@endif
