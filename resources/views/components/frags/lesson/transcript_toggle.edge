@let(enabled = showTranscript)

@form({
  action: form.patch('lessons.transcript', { slug: lesson.slug }),
  target: { 'up-lesson-transcript': `${lesson.id}:any` },
  'x-data': '',
  '@submit': '$store.app.showTranscript = !$store.app.showTranscript'
})
  @tooltip({ text: enabled ? 'Transcript panel is shown' : 'Transcript panel is hidden', class: 'tooltip-bottom' })
    <button {{ html.attrs({ type: 'submit', class: ['group/tog btn btn-toggle btn-square', { 'active': enabled }] }) }}>
      @if (enabled)
        @svg('solar:clipboard-list-bold', { class: 'w-5 h-5 text-success' })
      @else
        @svg('solar:clipboard-list-outline', { class: 'w-5 h-5 text-base-content/60 group-hover/tog:text-base-content duration-200' })
      @endif
    </button>
  @end

  @!frags.toaster()
@end
