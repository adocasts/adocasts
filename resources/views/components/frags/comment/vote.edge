@let(hasLiked = comment.userVotes.includes(auth.user?.id))
@let(likeIcon = hasLiked ? 'solar:heart-angle-bold' : 'solar:heart-angle-outline')

@can('CommentPolicy.vote')

  @form({
    action: form.patch('comments.vote', { id: comment.id }),
    target: { 'up-comment-like': comment.id },
  })
    <button {{ html.attrs({ type: 'submit', class: ['btn btn-outline btn-sm', { 'btn-primary' : hasLiked }] }) }}>
      @svg(likeIcon, { class: 'w-4 h-4 -ml-1' })
      {{ comment.userVotes.length }}
    </button>

    @!frags.toaster()
  @end

@else

  <div up-comment-like="{{ comment.id }}" class="btn btn-outline btn-sm" disabled="disabled">
    @svg(likeIcon, { class: 'w-4 h-4 -ml-1' })
    {{ comment.userVotes.length }}

    @!frags.toaster()
  </div>

@endcan
