@if (auth.user)

  @form({
    action: form.patch('series.watchlist', { slug: series.slug }),
    target: { 'up-discussion-like': `${series.id}:any` },
  })

    <button {{ html.attrs({ type: 'submit', class: ['btn btn-outline', { 'btn-success bg-success/10 hover:bg-success': series.meta.isInWatchlist }] }) }}>
      @if (series.meta.isInWatchlist)
        @svg('solar:bookmark-bold', { class: `size-4 opacity-80` })
        <span class="hidden @lg:inline ml-1">
          In Your Watchist
        </span>
      @else
        @svg('solar:bookmark-outline', { class: `size-4 text-base-content/80 group-hover/tog:text-base-content duration-200` })
        <span class="hidden @lg:inline ml-1">
          Add to Watchist
        </span>
      @endif
    </button>

    @!frags.toaster()
  @end

@else

  <a href="{{ route('auth.signup') }}" class="btn btn-outline btn-square @lg:btn-not-square" up-auth-modal>
    @svg('solar:bookmark-outline', { class: `size-4 text-base-content/80 group-hover/tog:text-base-content duration-200` })
    <span class="hidden @lg:inline ml-1">
      Add to Watchist
    </span>

    @!frags.toaster()
  </a>

@endif
