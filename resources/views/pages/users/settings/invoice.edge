@let(timezone = request.ctx.timezone)
@let(data = {
  filename: `${invoice.number}.pdf`,
  billToInfo: auth.user.billToInfo,
  isCustomBillTo: !!auth.user.billToInfo,
  isSavingBillTo: false,
  successBillTo: null,
  errorBillTo: null,
})

@layout.pdf({ title: `Invoice ${invoice.number} | Adocasts Invoice`, data })
  <form id="csrf">
    {{ csrfField() }}
  </form>
  @slot('sticky')

    <div class="bg-base-200 w-full shadow-xl">
      <div class="flex justify-between items-center flex-wrap mx-auto max-w-screen-2xl p-6 gap-y-3">
        <div>
          <p class="text-lg font-bold">
            {{ TimeService.fromStripe(invoice.created).setZone(timezone).toFormat('MMMM dd, yyyy') }}
            <span class="text-xs text-slate-base-600 font-normal">({{ timezone || 'UTC' }})</span>
          </p>
          <p class="text-sm">You can click to edit various portions of your invoice below.</p>
        </div>
        
        <div class="w-full md:w-auto flex flex-col md:flex-row gap-3">
          <button class="btn btn-soft justify-center" :disabled="isSavingBillTo" @click="confirmBillToInfo">
            <span x-show="isSavingBillTo" x-cloak>Saving Address ...</span>
            <span x-show="!isSavingBillTo">Save Address</span>
          </button>

          <button class="btn btn-soft justify-center" @click="onPrint($refs.page)">
            Print
          </button>

          <button class="btn btn-primary justify-center" @click="onExport($refs.page)">
            Download
          </button>
        </div>
      </div>
    </div>

    @if (auth.user.billToInfo)
      <div x-show="isCustomBillTo" class="bg-base-100 shadow-xl">
        <div class="text-sm text-base-content mx-auto max-w-screen-2xl px-6 py-3">
