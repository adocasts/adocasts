@layout({
  title: "Explore All Website Pages | Adocasts Sitemap",
  meta: {
    url: route('sitemap'),
    desc: "Navigate through all pages on the Adocasts website with our comprehensive sitemap, helping you find AdonisJS and NodeJS lessons, series, and resources easily.",
    asset: null,
    index: true
  }
})

  <div class="section-container mx-auto relative z-[1]">
    <h1 class="heading-2">Sitemap</h1>

    <section class="section-y">
      <h3 class="heading-3">Content</h3>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3">
        <a href="/" class="link link-hover">Home</a>
        <a href="{{ route('series.index') }}" class="link link-hover">Series</a>
        <a href="{{ route('topics.index') }}" class="link link-hover">Topics</a>
        <a href="{{ route('lessons.index') }}" class="link link-hover">Lessons</a>
        <a href="{{ route('snippets.index') }}" class="link link-hover">Snippets</a>
        <a href="{{ route('blogs.index') }}" class="link link-hover">Blogs/News</a>
        <a href="{{ route('discussions.index') }}" class="link link-hover">Forum</a>
      </div>
    </section>

    <section class="section-y">
      <h3 class="heading-3">Series</h3>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3">
        @each (item in series)
          <a href="{{ route('series.show', { slug: item.slug }) }}" class="link link-hover">
            {{ item.name }}
          </a>
        @endeach
      </div>
    </section>

    <section class="section-y">
      <h3 class="heading-3">Topics</h3>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3">
        @each (item in topics)
          <a href="{{ route('topics.show', { slug: item.slug }) }}" class="link link-hover">
            {{ item.name }}
          </a>
        @endeach
      </div>
    </section>

    <section class="section-y">
      <h3 class="heading-3">Support &amp; Legal</h3>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3">
